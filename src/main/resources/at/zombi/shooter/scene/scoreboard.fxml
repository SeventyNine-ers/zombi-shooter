<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.zombi.shooter.scene.ScoreboardController"
      alignment="CENTER" fx:id="scoreboardVBox"
      spacing="10">

  <children>

    <Text fx:id="scoreboardText">
    </Text>
    <Button text="Clear Scores" mnemonicParsing="false" minWidth="200" minHeight="40" onAction="#onClearScoresButtonClick"/>
    <Button text="Back to Menu" mnemonicParsing="false" minWidth="200" minHeight="40" onAction="#onMenuButtonClick"/>
  </children>
</VBox>
